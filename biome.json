{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!dist/**",
      "!build/**",
      "!coverage/**",
      "!node_modules/**",
      "!.next/**",
      "!.cache/**",
      "!public/build/**",
      "!**/*.min.js",
      "!**/*.min.css",
      "!.turbo/**",
      "!.vercel/**",
      "!.netlify/**",
      "!.astro/**",
      "!.vite/**",
      "!.parcel-cache/**",
      "!**/*.log"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noLabelWithoutControl": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "indentStyle": "space",
      "lineWidth": 120
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "indentWidth": 2,
      "indentStyle": "space",
      "arrowParentheses": "asNeeded",
      "attributePosition": "multiline",
      "trailingCommas": "none",
      "jsxQuoteStyle": "single",
      "lineEnding": "lf",
      "bracketSameLine": true,
      "bracketSpacing": true,
      "lineWidth": 120,
      "quoteProperties": "preserve",
      "semicolons": "asNeeded"
    }
  }
}
